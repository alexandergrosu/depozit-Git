                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
				<validate>required-entry</validate>
                            </label_comments>
			    <enable_cartupdate translate="label">
                                <label>Allow to change Quantity on Quick Checkout</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>34</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </enable_cartupdate>
			     <enable_coupon translate="label">
                                <label>Enable Coupon on Quick Checkout</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>35</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </enable_coupon>
			    <enable_login translate="label">
                                <label>Enable Login link on Quick Checkout</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>36</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </enable_login>
			    <login translate="label">
                                <label>Enter Quick Checkout Login Link Context</label>
                                <frontend_type>text</frontend_type>
                                <sort_order>37</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </login>
			    <enable_register translate="label">
                                <label>Enable Customer Registration on Quick Checkout</label>
                                <frontend_type>select</frontend_type>
                                <source_model>quickcheckout/checkbox</source_model>
                                <sort_order>40</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </enable_register>
                            <enable_autogenerate translate="label">
                                <label>Enable Auto Password Generator on Quick Checkout</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>41</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </enable_autogenerate>
			    <length_autogenerate translate="label">
                                <label>Enter the length of  Auto Generator Password</label>
                                <frontend_type>text</frontend_type>
                                <sort_order>42</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
				<validate>validate-digits</validate>
                            </length_autogenerate>
			    <update_country translate="label">
                               <label>Update Shipping/Payment Methods on Country Change</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>45</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>1</show_in_store>
                            </update_country>
			    <update_zip translate="label">
                               <label>Update Shipping/Payment Methods on Zip/Postal code Change</label>
