<?xml version="1.0"?>
<config>
   <sections>
		<fblikebox translate="label comment" module="fblikebox">
            <tab>general</tab>
            <label>Facebook LikeBox</label>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <fblikebox translate="label comment" module="fblikebox">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Active:</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Activate box and script including.</comment>
                        </active>
						<xfbml translate="label">
                            <label>Use XFBML:</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Use XFBML Script to insert LikeBox. Otherwise use IFrame.</comment>
                        </xfbml>
                        <status translate="label">
                            <label>Script Status:</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <default_value>1</default_value>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Check login status.</comment>
                        </status>
						<cookie translate="label">
                            <label>Script Cookie:</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <default_value>1</default_value>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Enable cookies to allow the server to access the session.</comment>
                        </cookie>
                    </fields>
                </fblikebox>
                <ids translate="label comment" module="fblikebox">
                    <label>IDs</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <appid translate="label">
                            <label>App-ID:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>optional</comment>
                        </appid>
                        <pageid translate="label">
                            <label>Profile-ID:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <default_value>1</default_value>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Also known as 'Page-ID'.</comment>
                        </pageid>
                    </fields>
                </ids>
				<options translate="label comment" module="fblikebox">
                    <label>Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <header translate="label">
                            <label>Show Header:</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Show facebook header.</comment>
                        </header>
                        <stream translate="label">
                            <label>Show Stream:</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <default_value>1</default_value>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Show last page entrys.</comment>
                        </stream>
						<connections translate="label">
                            <label>Connections:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <default_value>1</default_value>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Number of shown persons.</comment>
                        </connections>
						<language translate="label">
                            <label>Language:</label>
                            <frontend_type>select</frontend_type>
							<source_model>fblikebox/language</source_model>
                            <sort_order>15</sort_order>
                            <default_value>en_US</default_value>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </language>
                    </fields>
                </options>
				<size translate="label comment" module="fblikebox">
                    <label>Box Size</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <width translate="label">
                            <label>Width:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Box-Width in px.</comment>
                        </width>
						<height translate="label">
                            <label>Height:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Box-Heigth in px.</comment>
                        </height>
                    </fields>
                </size>
				<style translate="label comment" module="fblikebox">
                    <label>Css File</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <use translate="label">
                            <label>Use CSS File:</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use>
						<file translate="label">
                            <label>Filename:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Located in 'media/fblikebox/'.</comment>
                        </file>
						<developer translate="label">
                            <label>Developer Mode:</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Enable developer mode for creating own css-file. Otherwise Facebook will cache your css-file.</comment>
                        </developer>
                    </fields>
                </style>
            </groups>
        </fblikebox>
    </sections>
</config>